# Cloudflare Tunnel Configuration
# Ingress rules are managed dynamically via ingress.yml
---
tunnel: {{ cloudflared_tunnel_id | default('') }}
credentials-file: /etc/cloudflared/credentials.json

# Include ingress rules from separate file for dynamic updates
ingress:
  - service: http_status:404
